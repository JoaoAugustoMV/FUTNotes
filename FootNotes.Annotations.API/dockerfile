# Stage 1: Build the application
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY ["FootNotes.Annotations.API/FootNotes.Annotations.API.csproj", "FootNotes.Annotations.API/"]
RUN dotnet restore "FootNotes.Annotations.API/FootNotes.Annotations.API.csproj"
COPY . .

WORKDIR /src/FootNotes.Annotations.API
RUN dotnet build "FootNotes.Annotations.API.csproj" -c Release -o /app/build

# Stage 2: Publish the application
FROM build AS publish
RUN dotnet publish "FootNotes.Annotations.API.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Stage 3: Create the final runtime image
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
EXPOSE 80
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "FootNotes.Annotations.API.dll"]